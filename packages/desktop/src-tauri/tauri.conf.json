{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TrainDaily",
  "version": "1.4.8",
  "identifier": "com.traindaily.desktop",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "TrainDaily",
        "width": 400,
        "height": 700,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "TrainDaily",
    "copyright": "Copyright Â© 2026 TrainDaily",
    "category": "Healthcare and Fitness",
    "shortDescription": "Workout tracking and accountability",
    "longDescription": "TrainDaily is a workout tracking app with built-in accountability features including app blocking on training days and hourly micro-breaks.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    }
  }
}
